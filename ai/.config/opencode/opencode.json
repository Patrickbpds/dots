{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "instructions": [
    "AGENTS.md"
  ],
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "ref": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "ref-tools-mcp@latest"
      ],
      "enabled": true,
      "environment": {
        "REF_API_KEY": "{env:REF_API_KEY}"
      }
    },
    "exa": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.exa.ai/mcp?exaApiKey={env:EXA_API_KEY}"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "docker",
        "run",
        "-i",
        "--rm",
        "--init",
        "--pull=always",
        "mcr.microsoft.com/playwright/mcp"
      ],
      "enabled": true
    }
  },
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "granite3.3:8b": {
          "tool_call": true
        },
        "mistral-small3.2:24b": {
          "tool_call": true
        },
        "qwen3:latest": {
          "tool_call": true,
          "reasoning": true
        }
      }
    }
  }
}
